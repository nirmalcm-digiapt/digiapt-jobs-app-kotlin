<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="job"
            type="net.digiapt.data.models.Job" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e3e3e3"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_height="100dp"
                    android:visibility="visible"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/colorWhite"
                            android:gravity="left"
                            android:text="Senior IOS Developer"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:textSize="14dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#e3e3e3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="DigiApt Software Technologies Ltd"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_gravity="start">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_experience"/>

                    <TextView
                        android:gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 - 4 Years"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_gravity="start">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_vacancy"/>

                    <TextView
                        android:gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Vacancy"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_gravity="start">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_location"/>

                    <TextView
                        android:gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bangalore"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_gravity="start">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_skills"/>

                    <TextView
                        android:gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{job.skill_set_required}"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_gravity="start">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_salary"/>

                    <TextView
                        android:gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not disclosed"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_gravity="start">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_date"/>

                    <TextView
                        android:gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Posted on 03 Jan 2020"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Industry type"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="start" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IT Software / Software services"
                    android:textSize="16dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="start" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Functional area"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="start" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IT Software / Application Programming"
                    android:textSize="16dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="start" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="start" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Software Develpoer"
                    android:textSize="16dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="start" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desired candidate profile"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="start" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UG: Any , PG : Any"
                    android:textSize="16dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="start" />

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="#e3e3e3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employer Details"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="start" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_gravity="start">

                        <TextView
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Company name"
                            android:textSize="16dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Digiapt software solution"
                            android:textSize="16dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_gravity="start">

                        <TextView
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Company website"
                            android:textSize="16dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="www.digiapt.com"
                            android:textSize="16dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_gravity="center" />

                    </LinearLayout>

                    <TextView
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Youtube video link"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="start" />

                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        app:cardBackgroundColor="@color/colorWhite"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:textColor="@color/colorPrimary"
                                android:gravity="left"
                                android:text="CONTACT DETAILS"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10dp"/>

                            <View
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#e3e3e3"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="20dp"
                                android:orientation="horizontal"
                                android:layout_gravity="start">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:tint="@color/colorPrimary"
                                    android:src="@drawable/ic_experience"/>

                                <TextView
                                    android:gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gaurav Kumar"
                                    android:textSize="16dp"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_gravity="center" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="20dp"
                                android:orientation="horizontal"
                                android:layout_gravity="start">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:tint="@color/colorPrimary"
                                    android:src="@drawable/ic_vacancy"/>

                                <TextView
                                    android:gravity="start"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Website link"
                                    android:textSize="16dp"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_gravity="center" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="20dp"
                                android:orientation="horizontal"
                                android:layout_gravity="start">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:tint="@color/colorPrimary"
                                    android:src="@drawable/ic_location"/>

                                <TextView
                                    android:gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="gaurav.kumar@digiapt.com"
                                    android:textSize="16dp"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_gravity="center" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="20dp"
                                android:orientation="horizontal"
                                android:layout_gravity="start">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:tint="@color/colorPrimary"
                                    android:src="@drawable/ic_skills"/>

                                <TextView
                                    android:gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Not mentioned"
                                    android:textSize="16dp"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_gravity="center" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"/>

                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>

                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <FrameLayout
            android:background="@android:color/transparent"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:layout_gravity="bottom|center_horizontal"
                android:textAllCaps="true"
                android:text="APPLY"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

    </FrameLayout>
</layout>